@model IEnumerable<AspnetCoreMvcFull.Models.KategoriSurat>

@{
  ViewData["Title"] = "Kategori Surat";
  ViewData["isNavbar"] = false;
  ViewData["navbarType"] = "layout-navbar-hidden";
}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="@Url.Action("Index", "Home")">Home</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      Kategori Surat
    </li>
  </ol>
</nav>

<div class="card">
  <div class="card-header">
    <p class="mb-0">Berikut ini adalah kategori yang bisa digunakan untuk melabeli surat.</p>
    <p>Klik "Tambah" pada kolom aksi untuk menambahkan kategori baru.</p>
  </div>
  <div class="card-body">
    <div class="table-responsive text-nowrap">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ID Kategori</th>
            <th>Nama Kategori</th>
            <th>Keterangan</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          @if (Model.Any())
          {
            foreach (var item in Model)
            {
              <tr>
                <td>@item.Id</td>
                <td><strong>@item.NamaKategori</strong></td>
                <td>@item.Keterangan</td>
                <td>
                  <div class="d-flex align-items-center">
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                      onsubmit="return confirm('Apakah Anda yakin ingin menghapus kategori ini?');">
                      @Html.AntiForgeryToken()
                      <button type="submit" class="btn btn-danger btn-sm me-2">Hapus</button>
                    </form>

                    <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                  </div>
                </td>
              </tr>
            }
          }
          else
          {
            <tr>
              <td colspan="4" class="text-center">Belum ada kategori yang ditambahkan.</td>
            </tr>
          }
        </tbody>
      </table>
    </div>
    <div class="mt-4">
      <a class="btn btn-success" asp-action="Create">[+] Tambah Kategori Baru...</a>
    </div>
  </div>
</div>
